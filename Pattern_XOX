#include <stdio.h>

int main() {

   int n;
    scanf("%d",&n);
    if(n<=1){
        printf("Shape Not Possible");
    }
    else if(n%2==0){
        // printf("%d", n+1);
        for(int i=1;i<=n+1;++i){
            for(int j=1;j<=n+1;++j){
                
                if(i==((n+1)/2)+1||j==((n+1)/2)+1){
                printf("x");
                }else{
                  printf("o");
                }
            }  
            printf("\n");
            }
        
    }else{
        // printf("%d", n);
        for(int i=1;i<=n;++i){
            for(int j=1;j<=n;++j){
                if(i==n/2+1||j==n/2+1){
                printf("x");
                }else{
                  printf("o");
                }
            }
            printf("\n");
            }
    }
    return 0;
}
