#include <stdio.h>

int main() {

    int n ;
    scanf("%d",&n);
    if(n==1||n<=0){
        printf("Shape Not Possible");
    }
    
    else{
        for(int i =1; i<=n;++i){
        
        for(int j =1; j<=(n-1)-i+1;++j){
            printf(" ");
        }
            
            
            for(int k =1; k<=i;++k){
                printf("*");
                
            }
            for(int k =1; k<=2;++k){
                printf(" ");
                
            }
            for(int k =1; k<=i;++k){
                printf("*");
                
            }
        printf("\n");
    }
    }
    return 0;
}
