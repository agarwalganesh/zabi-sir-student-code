#include <stdio.h>Create Pattern_Odd Number Triangle Summation

int main() {

    int n;
int num =3;
    scanf("%d",&n);
    int a;
    
    for(int i =1 ; i<=n;++i)
    {     
        for(int j=1 ; j<=n-i;++j)
        {
        printf("  ");    
        }
        for(int j=1 ; j<=2*i-1; ++j)
        {
            if(i==1&&j==1)
            {
                printf("1");
            }
            else if(i==j)
            {    
                printf("%d ",((2*i-1)/2)*(2*a+(((2*i-2)-1)*2)));
            }
            else
            {
                if(j==1){
                    a=num;
                }
                printf("%d ",num);
                 num = num +2;
            }
            
        }
        
        printf("\n");
    }
    
    return 0;
}

